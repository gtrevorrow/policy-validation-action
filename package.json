{
  "name": "@gtrevorrow/policy-validation-action",
  "version": "0.2.7",
  "description": "A tool for validating ORACLE OCI IAM policy statements in Terraform HCL files.",
  "keywords": [
    "oci",
    "policy",
    "terraform",
    "validation",
    "cli"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/gtrevorrow",
    "scope": "@gtrevorrow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtrevorrow/policy-validation-action.git"
  },
  "main": "lib/Main.js",
  "bin": {
    "policy-validation-action": "dist/index.js"
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rm -rf lib dist",
    "build": "tsc && ncc build lib/index.js -o dist && chmod +x dist/index.js",
    "test": "jest",
    "start": "node dist/index.js",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage",
    "prepare": "npm run build && husky install",
    "prepublishOnly": "npm test",
    "test:cli": "chmod +x ./scripts/test-cli-install.sh && ./scripts/test-cli-install.sh",
    "test:cli:validator": "chmod +x ./scripts/test-validator.sh && ./scripts/test-validator.sh",
    "release": "standard-version",
    "security:audit": "npm audit",
    "security:audit:fix": "npm audit fix",
    "security:report": "npm audit --json > security-report.json",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "release:patch": "standard-version --release-as patch",
    "commit": "cz"
  },
  "author": "Gordon Trevorrow",
  "license": "UPL-1.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "@google/generative-ai": "^0.24.1",
    "@langchain/anthropic": "^0.3.24",
    "@langchain/core": "^0.3.62",
    "@langchain/google-genai": "^0.2.14",
    "@langchain/openai": "^0.5.17",
    "@types/antlr4": "^4.11.6",
    "antlr4": "^4.13.1",
    "antlr4ts": "^0.5.0-alpha.4",
    "commander": "^9.0.0",
    "mkdirp": "^1.0.4",
    "uuid": "^8.3.2",
    "xml": "^1.0.1",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@types/chalk": "^0.4.31",
    "@types/commander": "^2.12.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.18.0",
    "@vercel/ncc": "^0.36.1",
    "commitizen": "^4.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-junit": "^15.0.0",
    "standard-version": "^9.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "standard-version": {
    "tag-prefix": "v",
    "sign": false,
    "verify": false,
    "infile": "CHANGELOG.md",
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "chore",
        "section": "Maintenance"
      },
      {
        "type": "ci",
        "section": "Continuous Integration"
      },
      {
        "type": "docs",
        "section": "Documentation"
      },
      {
        "type": "style",
        "section": "Styling"
      },
      {
        "type": "refactor",
        "section": "Refactors"
      },
      {
        "type": "perf",
        "section": "Performance"
      },
      {
        "type": "test",
        "section": "Tests"
      }
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
